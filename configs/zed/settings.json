{
  "theme": {
    "light": "Rosé Pine",
    "dark": "Rosé Pine"
  },
  "base_keymap": "None",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13,
  "ui_font_size": 13,
  "bottom_dock_layout": "full",
  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",
  "vim_mode": true,
  "restore_on_startup": "none",
  "lsp_highlight_debounce": 0,
  "auto_signature_help": true,
  "wrap_guides": [80, 100, 120],
  "always_treat_brackets_as_autoclosed": true,
  "toolbar": {
    "quick_actions": false
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "scrollbar": {
    "show": "never"
  },
  "minimap": {
    "show": "always",
    "thumb": "hover",
    "thumb_border": "none"
  },
  "search": {
    "button": false
  },
  "use_smartcase_search": true,
  "diagnostics": {
    "button": false
  },
  "relative_line_numbers": true,
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    "edit_debounce_ms": 0,
    "scroll_debounce_ms": 0
  },
  "project_panel": {
    "button": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "button": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "git_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "always_allow_tool_actions": true,
    "use_modifier_to_send": true,
    "button": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "default_profile": "ask"
  },
  "debugger": {
    "button": false
  },
  "tab_bar": {
    "show": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "ensure_final_newline_on_save": false,
  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.git/",
    "**/.venv/",
    "**/build/",
    "**/.cache/"
  ],
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "terminal": {
    "blinking": "on",
    "button": false
  },
  "auto_install_extensions": {
    "html": false,
    "Rosé Pine": true
  },
  "languages": {
    "LaTeX": {
      "show_edit_predictions": true
    },
    "Python": {
      "language_servers": ["ruff"]
    },
    "C": {
      "format_on_save": "on"
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120,
          "lint": {
            "ignore": ["E731"]
          }
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "executable": "latexmk",
            "args": ["-pdf", "-synctex=1", "%f"],
            "forwardSearchAfter": true,
            "onSave": true
          },
          "forwardSearch": {
            "executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
            "args": ["-r", "-n", "%l", "%p", "%f"]
          }
        }
      }
    }
  },
  "file_types": {
    "C": ["*.c", "*.h", "*.C", "*.H"],
    "C++": ["*.cpp", "*.hpp", "*.Cpp", "*.Hpp", "*.CPP", "*.HPP"],
    "YAML": [".clangd", ".clang-format"]
  }
}
