{
  "theme": {
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine"
  },
  "base_keymap": "None",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_fallbacks": [".ZedMono"],
  "buffer_font_size": 13,
  "ui_font_size": 13,

  "bottom_dock_layout": "left_aligned",
  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",
  "vim_mode": true,
  "hover_popover_enabled": false,
  "restore_on_startup": "none",
  "lsp_highlight_debounce": 0,
  "drag_and_drop_selection": {
    "enabled": false
  },
  "wrap_guides": [80, 100, 120],
  "always_treat_brackets_as_autoclosed": false,

  "toolbar": {
    "quick_actions": false
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "scrollbar": {
    "show": "never"
  },
  "minimap": {
    "show": "always",
    "thumb": "hover",
    "thumb_border": "none"
  },
  "scroll_beyond_last_line": "vertical_scroll_margin",
  "vertical_scroll_margin": 10,
  "horizontal_scroll_margin": 10,
  "relative_line_numbers": true,
  "search_wrap": false,
  "search": {
    "button": false,
    "regex" :true
  },
  "use_smartcase_search": true,
  "inlay_hints": {
    "show_background": true,
    "edit_debounce_ms": 0,
    "scroll_debounce_ms": 0
  },
  "project_panel": {
    "button": false,
    "starts_open": false
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "message_editor": {
    "auto_replace_emoji_shortcode": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "button": false,
    "stream_edits": true,
    "play_sound_when_agent_done": true,
    "use_modifier_to_send": true
  },
  "tab_bar": {
    "show": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "ensure_final_newline_on_save": false,
  "format_on_save" : "off",
  "soft_wrap": "none",
  "diagnostics": {
    "button": false,
    "lsp_pull_diagnostics": {
      "debounce_ms": 0
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 0
    }
  },

  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.git/",
    "**/.venv/",
    "**/.cache/",
    "**/.zig-cache/",
    "**/__pycache__/",
    "build/",
    "Build/",
    "dist-newstyle/",
    "bin/"
  ],
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "journal": {
    "hour_format": "hour24"
  },
  "terminal": {
    "font_family": "JetBrains Mono",
    "blinking": "on",
    "button": false,
    "toolbar": {
      "breadcrumbs": false
    }
  },

  "file_types": {
    "C": ["*.c", "*.h"],
    "YAML": [".clangd", ".clang-format"],
    "CMake": ["cmakelists.txt"]
  },
  "auto_install_extensions": {
    "html": false,
    "rose-pine-theme": true
  },
  "lsp": {
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "executable": "latexmk",
            "args": ["-pdf", "-synctex=1", "%f"],
            "forwardSearchAfter": true,
            "onSave": true
          },
          "forwardSearch": {
            "executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
            "args": ["-r", "-n", "%l", "%p", "%f"]
          }
        }
      }
    },
    "lua-language-server": {
      "binary": {
        "arguments": ["--configpath", "$HOME/.config/zed/.luarc.json"]
      }
    },
    "hls": {
      "initialization_options": {
        "haskell": {
          "formattingProvider": "fourmolu",
          "maxCompletions": 128,
          "plugin": {
            "cabal": {
              "globalOn": true,
              "codeActionsOn": true,
              "completionOn": true,
              "diagnosticsOn": true,
              "hoverOn": true,
              "symbolsOn": true
            },
            "cabalHaskellIntegration": { "globalOn": true },
            "callHierarchy": { "globalOn": true },
            "changeTypeSignature": { "globalOn": true },
            "class": {
              "globalOn": true,
              "codeActionsOn": true,
              "codeLensOn": true
            },
            "eval": {
              "globalOn": true,
              "codeActionsOn": true,
              "codeLensOn": true,
              "config": {
                "diff": true,
                "exception": false
              }
            },
            "explicit-fields": {
              "globalOn": true,
              "codeActionsOn": true,
              "inlayHintsOn": true
            },
            "explicit-fixity": { "globalOn": true },
            "gadt": { "globalOn": true },
            "ghcide-code-actions-bindings": { "globalOn": true },
            "ghcide-code-actions-fill-holes": { "globalOn": true },
            "ghcide-code-actions-imports-exports": { "globalOn": true },
            "ghcide-code-actions-type-signatures": { "globalOn": true },
            "ghcide-completions": {
              "config": {
                "autoExtendOn": true,
                "snippetsOn": true
              },
              "globalOn": true
            },
            "ghcide-hover-and-symbols": {
              "globalOn": true,
              "hoverOn": true,
              "symbolsOn": true
            },
            "ghcide-type-lenses": {
              "config": { "mode": "always" },
              "globalOn": true
            },
            "hlint": {
              "globalOn": true,
              "codeActionsOn": true,
              "config": {
                "flags": []
              },
              "diagnosticsOn": true
            },
            "importLens": {
              "globalOn": true,
              "codeActionsOn": true,
              "codeLensOn": true,
              "inlayHintsOn": true
            },
            "moduleName": { "globalOn": true },
            "overloaded-record-dot": { "globalOn": true },
            "pragmas-completion": { "globalOn": true },
            "pragmas-disable": { "globalOn": true },
            "pragmas-suggest": { "globalOn": true },
            "qualifyImportedNames": { "globalOn": true },
            "rename": {
              "config": { "crossModule": true },
              "globalOn": true
            }
          }
        }
      }
    }
  },
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 250
  },
  "debugger": {
    "button": false
  }
}
