{
  "theme": "Ros√© Pine",
  "base_keymap": "None",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13,
  "ui_font_size": 13,
  "bottom_dock_layout": "full",
  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",
  "vim_mode": true,
  "restore_on_startup": "none",
  "lsp_highlight_debounce": 0,
  "auto_signature_help": true,
  "wrap_guides": [80, 120],
  "always_treat_brackets_as_autoclosed": true,
  "toolbar": {
    "quick_actions": false
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "scrollbar": {
    "show": "never"
  },
  "minimap": {
    "show": "always",
    "thumb": "hover",
    "thumb_border": "none"
  },
  "search": {
    "button": false
  },
  "use_smartcase_search": true,
  "diagnostics": {
    "button": false
  },
  "gutter": {},
  "relative_line_numbers": true,
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    "edit_debounce_ms": 0,
    "scroll_debounce_ms": 0
  },
  "project_panel": {
    "button": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "outline_panel": {
    "button": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "git_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "default_profile": "ask",
    "single_file_review": false,
    "version": "2",
    "button": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    }
  },
  "tab_bar": {
    "show": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "ensure_final_newline_on_save": false,
  "file_scan_exclusions": ["**/.DS_Store", "**/.git/", "**/.venv/"],
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "terminal": {
    "button": false,
    "toolbar": {
      "title": false
    }
  },
  "auto_install_extensions": {
    "html": false
  },
  "languages": {
    "LaTeX": {
      "show_edit_predictions": true
    },
    "Python": {
      "language_servers": ["ruff", "pyright"]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120,
          "lint": {
            "ignore": ["E731"]
          }
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "executable": "latexmk",
            "args": ["-pdf", "-synctex=1", "%f"],
            "forwardSearchAfter": true,
            "onSave": true
          },
          "forwardSearch": {
            "executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
            "args": ["-r", "-n", "%l", "%p", "%f"]
          }
        }
      }
    },
    "lua-language-server": {
      "settings": {
        "Lua": {
          "diagnostics": {
            "globals": ["vim"]
          }
        }
      }
    }
  }
}
