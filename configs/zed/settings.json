{
  "theme": {
    "light": "Rosé Pine Dawn",
    "dark": "Rosé Pine"
  },
  "base_keymap": "None",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13,
  "ui_font_size": 13,
  "agent_font_size": 13,

  "pane_split_direction_horizontal": "down",
  "pane_split_direction_vertical": "right",
  "vim_mode": true,
  "hover_popover_enabled": false,
  "restore_on_startup": "none",
  "lsp_highlight_debounce": 0,
  "auto_signature_help": true,
  "drag_and_drop_selection": {
    "enabled": false
  },
  "go_to_definition_fallback": "none",
  "wrap_guides": [80, 100, 120],
  "always_treat_brackets_as_autoclosed": true,

  "toolbar": {
    "quick_actions": false
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "scrollbar": {
    "show": "never"
  },
  "minimap": {
    "show": "always",
    "thumb": "hover",
    "thumb_border": "none"
  },
  "scroll_beyond_last_line": "off",
  "vertical_scroll_margin": 10,
  "horizontal_scroll_margin": 10,
  "relative_line_numbers": true,
  "search_wrap": false,
  "search": {
    "button": false
  },
  "use_smartcase_search": true,
  "inlay_hints": {
    "enabled": true,
    "show_background": true,
    "edit_debounce_ms": 0,
    "scroll_debounce_ms": 0
  },
  "project_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "git_panel": {
    "button": false
  },
  "message_editor": {
    "auto_replace_emoji_shortcode": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "button": false,
    "stream_edits": true,
    "play_sound_when_agent_done": true,
    "use_modifier_to_send": true
  },
  "tab_bar": {
    "show": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "file_finder": {
    "modal_max_width": "large"
  },
  "ensure_final_newline_on_save": false,
  "diagnostics": {
    "button": false,
    "lsp_pull_diagnostics": {
      "debounce_ms": 0
    },
    "inline": {
      "enabled": true,
      "update_debounce_ms": 0
    }
  },

  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.git/",
    "**/.venv/",
    "**/.cache/",
    "**/.zig-cache/",
    "build/"
  ],
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "edit_predictions": {
    "mode": "subtle"
  },
  "journal": {
    "hour_format": "hour24"
  },
  "terminal": {
    "blinking": "on",
    "button": false,
    "toolbar": {
      "breadcrumbs": false
    }
  },

  "file_types": {
    "C": ["*.c", "*.h"],
    "YAML": [".clangd", ".clang-format"]
  },
  "auto_install_extensions": {
    "html": false,
    "rose-pine-theme": true
  },
  "languages": {
    "LaTeX": {
      "show_edit_predictions": true
    },
    "Python": {
      "language_servers": ["ruff"]
    },
    "C": {
      "format_on_save": "on"
    }
  },
  "lsp": {
    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120,
          "lint": {
            "ignore": ["E731"]
          }
        }
      }
    },
    "texlab": {
      "settings": {
        "texlab": {
          "build": {
            "executable": "latexmk",
            "args": ["-pdf", "-synctex=1", "%f"],
            "forwardSearchAfter": true,
            "onSave": true
          },
          "forwardSearch": {
            "executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
            "args": ["-r", "-n", "%l", "%p", "%f"]
          }
        }
      }
    },
    "lua-language-server": {
      "binary": {
        "arguments": ["--configpath", "$HOME/.config/zed/.luarc.json"]
      }
    }
  },
  "vim": {
    "toggle_relative_line_numbers": true,
    "use_smartcase_find": true,
    "highlight_on_yank_duration": 250
  },
  "debugger": {
    "button": false
  }
}
